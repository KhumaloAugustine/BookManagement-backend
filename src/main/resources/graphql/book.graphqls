type Book {
    id: ID!
    title: String!
    description: String!
    author: Author!
}

extend type Query {
    findAllBooks: [Book]!
    countBooks: Int!
}

extend type Mutation {
    newBook(title: String!, description: String!, authorId: ID!): Book!
    deleteBook(id: ID!): Boolean
    updateBookPageCount(pageCount: Int!, id: ID!): Book!
}